<h1>Log In</h1>

<p id="alert"><%= alert %></p>
<%= form_tag sessions_path do %>
  <div class="field input-group margin-bottom-sm">
   <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
    <%#= label_tag :email %>
    <%= text_field_tag :email, params[:email], :class => 'form-control', :type => "email", :placeholder => "Email" %>
  </div>

  <div class="field input-group margin-bottom-sm">
    <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
    <%#= label_tag :password %>
    <%= password_field_tag :password, :class => 'form-control', :type => "password", :placeholder => "Password" %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>

